<script style="width: 200px; height: 150px;" >
function tambah() {
    let angka1 = parseInt(document.getElementById("angka1").value); 
    let angka2 = parseInt(document.getElementById('angka2').value);
                window.alert(angka1+angka2);
    }
function kurang() { 
    let angka1 = parseInt(document.getElementById("angka1").value); 
    let angka2 = parseInt(document.getElementById('angka2').value);
                window.alert(angka1-angka2);
    }
function kali() { 
    let angka1 = parseInt(document.getElementById("angka1").value); 
    let angka2 = parseInt(document.getElementById('angka2').value);
                window.alert(angka1*angka2);
    }
function bagi() { 
    let angka1 = parseInt(document.getElementById("angka1").value); 
    let angka2 = parseInt(document.getElementById('angka2').value);
                window.alert(angka1/angka2);
}
</script>
